<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<% @teams.each do |team| %>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= team.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12 team-image">
            <img src="https://images.unsplash.com/photo-1464746133101-a2c3f88e0dd9?dpr=1&auto=format&crop=entropy&fit=crop&w=767&h=528&q=80&cs=tinysrgb" />
          </div>
          <div class="col-md-12">
            <%= team.description %>
          </div>
        </div>
      </div>
      <div class="panel-footer text-center">
        <div class="btn-group" role="group" aria-label="...">
          <% if current_user.added_note?(team.id) %>
            <%= link_to 'Edit notes', edit_team_note_path(team, current_user.find_team_note_id(team.id)), class: "btn btn-warning" %>
          <% else %>
            <%= link_to 'Add notes', new_team_note_path(team), class: "btn btn-warning" %>
          <% end %>
          <%= link_to 'Edit', edit_team_path(team), class: "btn btn-info"  %>
          <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br>

