<div class="row">
  <h1 class="text-center">Teams</h1>

  <% @teams.each do |team| %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= team.name %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 team-image">
              <img src="<%= team.image.url %>" />
            </div>
            <div class="col-md-12">
              <%= team.description %>
            </div>
          </div>
        </div>
        <div class="panel-footer text-center">
          <div class="btn-group" role="group" aria-label="...">
            <% if current_user.added_note?(team.id) %>
              <%= link_to 'Edit notes', edit_team_note_path(team, current_user.find_team_note_id(team.id)), class: "btn btn-warning" %>
            <% else %>
              <%= link_to 'Add notes', new_team_note_path(team), class: "btn btn-warning" %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to 'Edit', edit_team_path(team), class: "btn btn-info"  %>
              <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <h1 class="text-center">Votes</h1>
  <% @awards.each do |award| %>
    <div class="col-md-6">
      <%= link_to award.title, award_path(award), class: "btn btn-warning" %>
    </div>
  <% end %>
</div>